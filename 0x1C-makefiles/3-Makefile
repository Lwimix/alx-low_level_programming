# This makefile compiles all C(*.c) files into object
# files (*.o), then into an executable, school

CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	rm -f *~ $(NAME)
oclean:
	rm -f $(OBJ)
fclean:
	rm -f *~ $(NAME)
	rm -f $(OBJ)
re:
	rm -f $(OBJ)
	@rm -f $(NAME)
