# This makefile compiles all C(*.c) files into object
# files (*.o), then into an executable, school

CC=gcc
SRC=$(wildcard *.c)
OBJ=$(SRC:.c=.o)
CFLAGS=-Wall -Werror -Wextra -pedantic
NAME=school
RM=rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)
re:
	$(RM) $(OBJ)
	@$(RM) $(NAME)
